<h1>Todas as Tasks</h1>

<div class="tasks">
    <ul class="tasks-list">
        {{#each tasks}}
                <li>
                    {{#if this.done}}
                         <a href="/tasks/edit/{{this.id}}" class="done"> {{this.title}}</a>
                    {{else}}
                         <a href="/tasks/edit/{{this.id}}"> {{this.title}}</a>
                    {{/if}}
                    <div class="actions">

                        <form action="/tasks/updatestatus" method="post">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <input type="hidden" name="done" value="{{this.done}}">
                            <button type="submit"><i class="bi bi-check2"></i></button>
                        </form>

                        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

                        <form action="/tasks/remove" method="post">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <button type="submit"><i class="bi bi-x-lg"></i></button>
                        </form>

                    </div>
                </li>
        {{/each}}
    </ul>
</div>
